# Troop Check-in System - Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Flask secret key for session encryption
# Generate a random string for production: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Developer password for admin override and backup access
# This password allows:
# - Viewing/editing the admin override checkout code
# - Bypassing checkout codes as an admin override
# - Backup login access if main password is lost
DEVELOPER_PASSWORD=your-developer-password-here

# Flask debug mode (NEVER enable in production)
# Set to 'True' only for local development
FLASK_DEBUG=False

# YOURLS URL Shortener Configuration (Optional)
# Provides short URLs for checkout QR codes
# Leave empty if not using YOURLS

# Database password for YOURLS MySQL container
YOURLS_DB_PASSWORD=yourlspass
YOURLS_DB_ROOT_PASSWORD=rootpass

# YOURLS admin credentials (change these!)
YOURLS_USER=admin
YOURLS_PASSWORD=change_this_password
